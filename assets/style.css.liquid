:root {
    --title: {{settings.title}};
    --text: {{settings.text}};
    --hov: {{settings.hover}};
    --bg: {{settings.background}};
    --fontsize: 11px;
}

img {
max-width: 100%;
}
.img-bg {
    background-position-x: center;
    background-position-y: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: initial;
}


<div class="section" style="padding-top:{{ section.settings.padTop }}rem; padding-bottom:{{ section.settings.padBottom }}rem;">
  {% if section.settings.title != blank %}
    <div class="title text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {%- assign collection = collections[section.settings.collection] -%}

  <div class="products row">
    {% for product in collection.products limit: 4 %}
        <a class="product img-bg column" style="background-image: url({{product.featured_image | image_url: height: 400}});" href="{{ product.url }}">
          <div class="column">
            <h3>
              {{product.title}}
            </h3>
            {% include 'product-price-listing', product: product, show_vendor: false %}
          </div>
        </a>
    {% endfor %}
  </div>

    <div class="text-center cta" style="padding-top:{{ section.settings.padBottom }}rem;">
      <a href="{{ collection.url }}" >
        {{ 'collections.general.view_all' | t }}
      </a>
    </div>

</div>


